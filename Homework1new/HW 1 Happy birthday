#Asking user for current date
cur_month = int(input("What is today's month?:"))
cur_day = int(input("What is today's day?:"))
cur_year = int(input("What is today's year?:"))

#Asking user for their birthday
bday_month = int(input("What is your birthday month?:"))
bday_day = int(input("What is your birthday day?:"))
bday_year = int(input("What is your birthday year?:"))


#comparing dates
if cur_month == bday_month and cur_day == bday_day:
    print("Happy Birthday!!!")
elif cur_month == bday_month and cur_day < bday_day:
     print(f"You are currently {cur_year-bday_year-1} years old.")
elif cur_month < bday_month:
    print(f"You are currently {cur_year-bday_year-1} years old.")
else:
    print(f"You are currently {cur_year-bday_year} years old.")
